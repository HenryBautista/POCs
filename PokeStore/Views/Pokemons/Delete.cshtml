@model PokeStore.Web.Models.Pokemon

@{
    ViewData["Title"] = "Delete Pokemon";
}

<h3>You want delete me?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" >
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Store</a>
</div>